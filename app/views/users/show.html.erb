<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
  <ul class="nav topnav">
    <li>
      <div class="row"><b> <%=current_user.email %></b>&nbsp&nbsp <%= link_to "Sign out", destroy_user_session_path , class:"btn" %></div>
    </li>
  </ul>
	<div class="span8">
		<% if @questions.any? %>
			<h3>Questions (<%= @questions.count %>)</h3>
			<ol class="microposts">
				<%@questions.each do |u|%>
					<li>
						<span class="content"><%= u.question %></span>
						<span class="timestamp">
							Posted <%= time_ago_in_words(u.created_at) %> ago.
						</span>
					</li>
				<%end%>
			</ol>
		<% end %>
	</div>
</div>